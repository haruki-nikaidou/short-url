{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "Node"
  },
  "include": [
    "src/**/*.ts",
    "rollup.config.ts"
  ],
  "exclude": [
    "node_modules",
    "src/types"
  ]
}
